@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _localizer
@model FromLocalsToLocals.ViewModels.BugReportVM


<html>
<head>
    <link href='//fonts.googleapis.com/css?family=Open+Sans:700,600' rel='stylesheet' type='text/css'>
    <link href="~/css/reportbug.css" rel="stylesheet" type="text/css">
</head>

<body>
    <div id="absoluteCenteredDiv">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="box">
                <h2>@_localizer["Report a bug"]</h2>
                <div class="form-group">
                    <textarea asp-for="TextBug" class="form-control" rows="10" placeholder=@_localizer["Give us details about a bug..."] maxlength="400"></textarea>
                </div>
                <button class="button" type="submit">@_localizer["Submit"]</button>
            </div>
        </form>
    </div>
</body>
</html>