@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _localizer
@model FromLocalsToLocals.Models.ViewModels.HomeVM
@inject UserManager<AppUser> usermanager

@{
    ViewData["Title"] = _localizer["Home Page"];
    var itemsInRow = 4;
    var user = await usermanager.GetUserAsync(User);
}
<head>
    <style>
        .card {
            overflow: hidden;
            max-height: 470px;
            min-height: 470px;
            max-width: 290px;
            min-width: 140px;
            box-shadow: 0 0 15px rgba(10, 10, 10, 0.3);
        }
    </style>
</head>
<body>
    <div class="row" style="background: url(/Assets/vendorM.png);">
        <div class="container-fluid" style="background-size: cover;">
            <section>
                <div class="container" style="margin-top: 65px; margin-bottom: 65px;">
                    <header>
                        <p class="text-center text-capitalize mb-lg-1 font-weight-bold" style="font-size: 38px; font-family: 'Times New Roman'; color: white;">@_localizer["Support your local sellers"]</p>
                    </header>
                    <footer class="text-center">
                        <a class="btn btn-danger" role="button" asp-area="" asp-controller="Vendors" asp-action="AllVendors" style="width: 130px;">@_localizer["Go"]</a>
                        <a class="btn btn-danger" role="button" asp-area="" asp-controller="Home" asp-action="AboutUs" style="width: 130px;">@_localizer["Read More"]</a>
                    </footer>
                </div>
            </section>
        </div>
    </div>
    <p id="mapTitle" class="mt-3"></p>
    <h4 class="mt-3 mb-3" style="text-align: center; font-weight: bold">@_localizer["Discover all nearby vendors with just a few clicks."]</h4>
    <div class="container">
        <div class="row mb-3 justify-content-center d-flex">
            @Html.Partial("_Map", Model.AllVendors)
        </div>
    </div>
    <hr />

    <h3 class="mt-4 mb-2" style="text-align: center;">@_localizer["The Most Popular Services"]</h3>
    <hr />
    @if (Model.PopularVendors.Count() == 0)
    {
        <div class="row d-flex justify-content-center">
            <img src="~/Assets/suchEmpty.png" style="width:80%;" />
        </div>
    }
    else
    {
        <div class="row" style="background-color: #CCBA8B;">
            @foreach (var item in Model.PopularVendors)
            {
                <div class="col-sm-@(12 / itemsInRow) mb-3 mt-3 d-flex justify-content-center">
                    <div class="card" style="width:inherit; height:inherit; background-color: #F7F7F7;">
                        @if (item.Image == null)
                        {
                            <img src="~/Assets/localSeller.png" class="mt-3" style="width:160px ; height:150px; border-radius: 50%; align-self:center;" />
                        }
                        else
                        {
                            <img src="data:image;base64,@System.Convert.ToBase64String(item.Image)" class="mt-3" style="width:160px; height: 150px; border-radius: 50%; align-self:center;" />
                        }
                        <div class="card-body">
                            <h5 class="card-title" style="margin:0px;">@item.Title</h5>
                            <hr />
                            @switch (item.VendorTypeDb)
                            {
                                case "CarRepair":<p class="text-muted text-uppercase">@_localizer["Car repair"]</p>
                                break;

                                case "RuralTourism":<p class="text-muted text-uppercase">@_localizer["Rural tourism"]</p>
                                break;

                                default: <p class="text-muted text-uppercase">@item.VendorTypeDb</p>
                                break;
                    }
                            <hr />
                            @if (item.ReviewsCount.Sum() == 0)
                            {
                                <p class="font-italic">@_localizer["No Reviews"]</p>
                            }
                            else
                            {
                                @switch (@Math.Round(item.Average))
                                {
                                    case 5:
                                        <p class="ml-3 ">
                                            <span class="fa fa-star checked"></span>
                                            <span class="fa fa-star checked"></span>
                                            <span class="fa fa-star checked"></span>
                                            <span class="fa fa-star checked"></span>
                                            <span class="fa fa-star checked"></span>
                                            <span>@item.Average.ToString("0.0")</span>
                                        </p>
                                        break;
                                    case 4:
                                        <p class="ml-3">
                                            <span class="fa fa-star checked"></span>
                                            <span class="fa fa-star checked"></span>
                                            <span class="fa fa-star checked"></span>
                                            <span class="fa fa-star checked"></span>
                                            <span class="fa fa-star"></span>
                                            <span>@item.Average.ToString("0.0")</span>
                                        </p>
                                        break;
                                    case 3:
                                        <p class="ml-3">
                                            <span class="fa fa-star checked"></span>
                                            <span class="fa fa-star checked"></span>
                                            <span class="fa fa-star checked"></span>
                                            <span class="fa fa-star"></span>
                                            <span class="fa fa-star"></span>
                                            <span>@item.Average.ToString("0.0")</span>
                                        </p>
                                        break;
                                    case 2:
                                        <p class="ml-3">
                                            <span class="fa fa-star checked"></span>
                                            <span class="fa fa-star checked"></span>
                                            <span class="fa fa-star"></span>
                                            <span class="fa fa-star"></span>
                                            <span class="fa fa-star"></span>
                                            <span>@item.Average.ToString("0.0")</span>
                                        </p>
                                        break;
                                    default:
                                        <p class="ml-3">
                                            <span class="fa fa-star checked"></span>
                                            <span class="fa fa-star"></span>
                                            <span class="fa fa-star"></span>
                                            <span class="fa fa-star"></span>
                                            <span class="fa fa-star"></span>
                                            <span>@item.Average.ToString("0.0")</span>
                                        </p>
                                        break;
                                }
                            }
                            <hr />
                            <div class="navbar mb-1" style="align-content:center">
                                <a asp-route-id="@item.ID" asp-controller="Vendors" asp-action="Details"
                                   class="btn btn-primary" style="background-color: #CCBA8B; border: 2px #CCBA8B;">@_localizer["Read More"]</a>
                                <a asp-route-id="Vendor/@item.ID" asp-controller="Reviews" asp-action="Reviews"
                                   class="btn btn-primary" style="background-color: #CCBA8B; border: 2px #CCBA8B;">@_localizer["Reviews"]</a>
                            </div>
                            @if (user != null && !user.Vendors.Any(x => x.ID == item.ID))
                            {
                                if (user.Following.Any(x => x.VendorID == item.ID))
                                {
                                    <button data-follow="false" data-id="@item.ID" class="btn btn-outline-dark w-100 followBtn" onclick="followBtnClick(this,@item.ID)">Unfollow</button>
                                }
                                else
                                {
                                    <button data-follow="true" data-id="@item.ID" class="btn btn-dark w-100 followBtn" onclick="followBtnClick(this,@item.ID)">Follow</button>
                                }
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="row mt-3 d-flex justify-content-center">
            <a class="btn btn-dark w-50" asp-controller="Vendors" asp-action="AllVendors">@_localizer["Read More"]</a>
        </div>
    }
    <hr />
    <div class="card, form-inline">
        <div class="card-body">
            <blockquote class="blockquote mb-0">
                <p style="font-style:italic;">A big business starts small.</p>
                <footer class="blockquote-footer">Richard Branson</footer>
            </blockquote>
        </div>
    </div>
</body>

<script src="~/js/following.js"></script>