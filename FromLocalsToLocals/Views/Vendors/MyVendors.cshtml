@model IEnumerable<FromLocalsToLocals.Models.Vendor>

@{
    ViewData["Title"] = "MyVendors";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h2 class="mt-4" style="text-align: center;">My Services</h2>


<table class="table">

    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VendorTypeDb)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VendorTypeDb)
            </td>
            <td>
                <div class="btn-group" role="group" aria-label="Basic example" >
                    <a asp-action="Edit" asp-route-id="@item.ID" type="button" class="btn btn-primary" >Edit</a> 
                    <a asp-action="Details" asp-route-id="@item.ID" type="button" class="btn btn-primary" >Details</a> 
                    <a asp-action="Delete" asp-route-id="@item.ID" type="button" class="btn btn-primary" >Delete</a>
                </div>
            </td>



        </tr>
}
    </tbody>
</table>


<div class="form-control" >
    <a asp-action="Create" type="button" class="btn-primary">Create New</a>
</div>
