@model FromLocalsToLocals.Models.User

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>@ViewData["Title"]</h1>

<head>
    <style>
        #login-form {
            position: absolute;
            top: auto;
            left: auto;
            border: 1px solid;
            padding: 10px 10px;
        }
    </style>
</head>


<body>
    <div id="login-form">
        @using (Html.BeginForm("LoginUser", "Login", FormMethod.Post))
        {
            <table>
                <p>
                    Username
                    @Html.TextBox("UsernameLogin")
                </p>

                <p>
                    Password
                    @Html.Password("PasswordLogin")
                </p>


            </table>
            <form asp-action="LoginUser">
                <input type="submit" value="Confirm" class="btn btn-danger" />
            </form>
        }
    </div>
</body>